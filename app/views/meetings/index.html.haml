- @meetings.each do |m|
	.row.meeting{id: "class#{m.ordinal}"}
		.col-md-2
			= "Class #{m.ordinal}"
		.col-md-3
			= m.starts_at.strftime("%a, %b %d ")
		.col-md-3
			= m.starts_at.strftime("%l%P")
			= "-"
			= m.ends_at.strftime("%l%P")
		.col-md-3
			- if m.is_public
				= link_to("Details", meeting_path(m))